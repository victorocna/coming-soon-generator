<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  <link rel="stylesheet" href="https://unpkg.com/bootstrap@4.3.1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family={{ FONT }}">

  <title>{{ TITLE }}</title>
  <meta name="description" content="{{ DESCRIPTION }}">

  <meta property="og:site_name" content="{{ SITE_NAME }}"/>
  <meta property="og:title" content="{{ TITLE }}"/>
  <meta property="og:description" content="{{ DESCRIPTION }}"/>
  <meta property="og:image" content="{{ IMAGE }}">
  <meta property="og:url" content="{{ URL }}">

  <style>
    body {
      background: #333 no-repeat center center;
      background-image: url("{{ IMAGE }}");
      background-size: cover;
      height: 100vh;
      color: #fff;
    }
    form {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 2em;
    }
    form button {
      margin: 0 .75em;
    }

    #main {
      background-color: rgba(0,0,0,0.5);
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    #center {
      text-align: center;
    }

    h1,
    h2,
    h3 {
      color: #fff;
      font-family: "{{ FONT }}", serif;
    }

    .borcan-cu-miere {
      display: none;
    }
  </style>
</head>
<body>

  <div id="main">
    <div id="center">
      <h1>Our website is coming really soon</h1>
      <h3>Want to be the first to know when we launch? Sign up below, it only takes 30 seconds or so.</h3>

      <form action="{{ FORM }}" method="POST">
        <input type="email" name="email" class="form-control" placeholder="Email address" style="width:200px" required>
        <input type="text" name="borcan-cu-miere" class="borcan-cu-miere">
        <button type="submit" class="btn btn-primary">Send</button>
      </form>

      <p id="js-form-response"></p>
    </div>
  </div>

  <script>
    (() => {
      const form = document.querySelector('form');
      const formResponse = document.querySelector('js-form-response');

      form.onsubmit = e => {
        e.preventDefault();

        // Prepare data to send
        const formData = {};
        const formElements = Array.from(form);
        formElements
          .filter(input => !!input.name)
          .map(input => (formData[input.name] = input.value));

        if (!!formData["borcan-cu-miere"]) {
          return false;
        }

        // Log what our lambda function will receive
        console.log(JSON.stringify(formData));

        // Construct an HTTP request
        var xhr = new XMLHttpRequest();
        xhr.open(form.method, form.action, true);
        xhr.setRequestHeader('Accept', 'application/json; charset=utf-8');
        xhr.setRequestHeader('Content-Type', 'application/json; charset=UTF-8');

        // Send the collected data as JSON
        xhr.send(JSON.stringify(formData));

        // Callback function
        xhr.onloadend = response => {
          if (response.target.status === 200) {
            // The form submission was successful
            form.reset();
            formResponse.innerHTML = 'Thanks for the message. Iâ€™ll be in touch shortly.';
          } else {
            // The form submission failed
            formResponse.innerHTML = 'Something went wrong';
            console.error(JSON.parse(response.target.response).message);
          }
        };
      };
    })();
  </script>

</body>
</html>
